---
import AWork from './AWork.astro'

const works = [
  {
    index: 0,
    title: 'Midnight Drive',
    slug: 'midnight-drive',
    date: 'Jan 2025',
    desc: 'Ambient synthwave loop with dreamy pads and subtle percussion.',
    url: '#',
  },
  {
    index: 1,
    title: 'Coffee Shop Jazz',
    slug: 'coffee-shop-jazz',
    date: 'Jan 2025',
    desc: 'Smooth jazz loop featuring piano, upright bass, and brushed drums.',
    url: '#',
  },
  {
    index: 2,
    title: 'Digital Pulse',
    slug: 'digital-pulse',
    date: 'Dec 2024',
    desc: 'Glitchy electronic beat with modular synth textures and filtered bass.',
    url: '#',
  },
  {
    index: 3,
    title: 'Forest Morning',
    slug: 'forest-morning',
    date: 'Dec 2024',
    desc: 'Organic acoustic loop blending guitar, field recordings, and soft percussion.',
    url: '#',
  },
  {
    index: 4,
    title: 'Neon Nights',
    slug: 'neon-nights',
    date: 'Nov 2024',
    desc: 'Cyberpunk-inspired loop with heavy bass, distorted leads, and crisp hi-hats.',
    url: '#',
  },
]
---

<section class="s-work" id="work" data-intersect>
  <div class="s__container">
    <header class="s__head">
      <div class="s__title">
        <div class="s__title__inner">
          <h2>
            <span>My</span>
            <span>BeaatsLoops</span>
          </h2>
        </div>
      </div><!-- .s__title -->

      <div class="s__desc">
        <div class="s__desc__inner">
          <p>Featured community loops and digital presskits.</p>
        </div>
      </div><!-- .s__desc -->
    </header><!-- .s__head -->

    <div class="s__works js-works">
      {
        works.map((work) => (
          <AWork
            class={`s__work s__work--${work.index + 1} js-work`}
            title={work.title}
            slug={work.slug}
            date={work.date}
            url={work.url}
            desc={work.desc}
            index={work.index}
          />
        ))
      }
    </div><!-- .s__works -->
  </div><!-- .s__container -->
</section>

