---
const { title, slug, date, url, desc, index, class: className } = Astro.props
---

<div class={className}>
  <div class="a__inner">
    <div class="a__meta">
      <div class="a__index">#{(index + 1).toString().padStart(2, '0')}</div>
      <div class="a__date">{date}</div>
    </div>

    <div class="a__content">
      <h3 class="a__title">{title}</h3>
      <p class="a__desc">{desc}</p>
      <a href={url} class="a__link">Open Project</a>
    </div>

    <div class="a__media">
      <div class="a__placeholder"></div>
    </div>
  </div>
</div>

<style lang="scss">
  .a__inner {
    display: grid;
    grid-template-columns: 80px 1fr 2fr;
    grid-gap: 1.5rem;
    padding: 1rem;
    background: color(secondary);
    color: color(primary);

    @include mq(tablet) {
      grid-template-columns: 60px 1fr;
      grid-template-rows: auto auto;
    }

    @include mq(phone) {
      display: block;
      padding: 1rem;
    }
  }

  .a__meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    @include mq(tablet) {
      grid-row: span 2;
    }

    @include mq(phone) {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      margin-bottom: 1rem;
    }
  }

  .a__index {
    font: 700 1.5rem/1 font-family(fraktion);
    margin-bottom: 1rem;

    @include mq(phone) {
      margin-bottom: 0;
    }
  }

  .a__date {
    font: 400 0.875rem/1 font-family(fraktion);
    opacity: 0.7;
  }

  .a__content {
    display: flex;
    flex-direction: column;
    justify-content: center;

    @include mq(tablet) {
      grid-column: 2;
      grid-row: 1;
    }

    @include mq(phone) {
      margin-bottom: 1.5rem;
    }
  }

  .a__title {
    font: 700 2rem/1.2 font-family(bigger);
    margin: 0 0 1rem;

    @include mq(phone) {
      font-size: 1.5rem;
    }
  }

  .a__desc {
    font: 400 1rem/1.4 font-family(editorial);
    margin: 0 0 1.5rem;
  }

  .a__link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: color(primary);
    color: color(secondary);
    font: 700 0.875rem/1 font-family(fraktion);
    text-decoration: none;
    text-transform: uppercase;
    transition: transform 0.3s ease;

    &:hover {
      transform: translateY(-2px);
    }
  }

  .a__media {
    display: flex;
    align-items: center;
    justify-content: center;

    @include mq(tablet) {
      grid-column: 2;
      grid-row: 2;
    }
  }

  .a__placeholder {
    width: 100%;
    padding-bottom: 60%;
    background: rgba(0, 0, 0, 0.2);
    position: relative;

    &:after {
      content: 'BeaatsLoops';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font: 700 1.25rem/1 font-family(bigger);
      color: rgba(255, 255, 255, 0.2);
      text-transform: uppercase;
    }
  }
</style>
