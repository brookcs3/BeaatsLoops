<style lang="scss">
  .s-work-beaats {
    position: relative;
    z-index: 3;
    
    min-height: 100vh;
    padding: 10rem 0;
    
    background: color(primary);
    overflow: hidden;
    
    @include mq(tablet-sm) {
      padding: 5rem 0;
    }
    
    .s__inner {
      position: relative;
      z-index: 2;
      
      margin: 0 auto;
      max-width: 120rem;
      padding: 0 2rem;
    }
    
    .s__title {
      margin: 0 0 4rem;
      
      color: color(secondary);
      font: 700 8rem / 0.9 font-family(bigger);
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      
      @include mq(desktop-xs) {
        font-size: 6rem;
        margin-bottom: 3rem;
      }
      
      @include mq(tablet-sm) {
        font-size: 4rem;
        margin-bottom: 2rem;
      }
      
      @include mq(phone) {
        font-size: 3rem;
        letter-spacing: 0.1em;
      }
    }
    
    .beaats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
      
      @include mq(tablet-sm) {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
      }
    }
    
    .beaats-text {
      display: flex;
      align-items: center;
      justify-content: center;
      
      padding: 2rem;
      
      border: 1px solid color(secondary);
      color: color(secondary);
      font-family: font-family(fraktion);
      font-weight: 700;
      text-align: center;
      letter-spacing: 0.3em;
      
      transition: all 0.3s ease;
      
      &:hover {
        background: color(secondary);
        color: color(primary);
        transform: scale(1.05);
      }
      
      &--large {
        font-size: 3rem;
        min-height: 150px;
        
        @include mq(tablet-sm) {
          font-size: 2rem;
          min-height: 100px;
        }
        
        @include mq(phone) {
          font-size: 1.5rem;
          min-height: 80px;
        }
      }
      
      &--medium {
        font-size: 2rem;
        min-height: 120px;
        
        @include mq(tablet-sm) {
          font-size: 1.5rem;
          min-height: 80px;
        }
        
        @include mq(phone) {
          font-size: 1.2rem;
          min-height: 60px;
        }
      }
      
      &--small {
        font-size: 1.5rem;
        min-height: 100px;
        
        @include mq(tablet-sm) {
          font-size: 1.2rem;
          min-height: 60px;
        }
        
        @include mq(phone) {
          font-size: 1rem;
          min-height: 50px;
        }
      }
    }
    
    .beaats-background {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 1;
      
      width: 100%;
      height: 100%;
      
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-around;
      
      opacity: 0.05;
      pointer-events: none;
      
      .bg-text {
        font: 700 20rem / 1 font-family(bigger);
        color: color(secondary);
        
        animation: float 6s ease-in-out infinite;
        
        @include mq(desktop-xs) {
          font-size: 15rem;
        }
        
        @include mq(tablet-sm) {
          font-size: 10rem;
        }
        
        @include mq(phone) {
          font-size: 8rem;
        }
        
        &:nth-child(even) {
          animation-delay: -3s;
        }
        
        &:nth-child(3n) {
          animation-delay: -1.5s;
        }
      }
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(2deg);
      }
    }
    
    &.is-in-view {
      .beaats-text {
        animation: slideInUp 0.6s ease-out forwards;
        
        @for $i from 1 through 12 {
          &:nth-child(#{$i}) {
            animation-delay: #{$i * 0.1}s;
            opacity: 0;
          }
        }
      }
    }
    
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>